<form action="<%= users_path %>" method="post" accept-charset="UTF-8">
  <label for="email">email</label>
  <input type="email" name="user[email]" id="email" value="" />

  <label for="username">username</label>
  <input type="text" name="user[username]" id="username" value="" />

  <label for="password">password</label>
  <input type="password" name="user[password]" id="password" value="" />

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
  <input type="submit" name="commit" id="submit" value="Create User">
</form>
